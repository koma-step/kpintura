{% extends "home/layout.html.twig" %}

{% block content %}
    <div id="background" class="image-load"></div>
    <div id="home-container">
        <div id="button-container">
            <div class="button" id="galerie">
                <div class="text">Galerie</div>
            </div>
            <div class="button" id="contact">
                <div class="text">ConTacT</div>
            </div>
        </div>
    </div>
{% endblock %}

{% block add_scripts %}
    <script type="text/javascript">
        const MY_ARTICLES = [{% for art in articles %}
            {
                name: '{{ art.name }}',
                title: "{{ art.title }}",
                description: "{{ art.description }}"
            },{% endfor %}
        ];
    </script>

    {% javascripts
        "@AppBundle/Resources/public/js/vendor/isotope.pkgd.min.js"
        "@AppBundle/Resources/public/js/vendor/jquery.waitforimages/jquery.waitforimages.js"
        "@AppBundle/Resources/public/js/vendor/jquery.mcustomscrollbar/jquery.mCustomScrollbar.min.js"
        "@AppBundle/Resources/public/js/controller/ViewController.js"
        "@AppBundle/Resources/public/js/controller/HomeController.js"
        "@AppBundle/Resources/public/js/controller/GalerieController.js"
        "@AppBundle/Resources/public/js/controller/MediaController.js"
        "@AppBundle/Resources/public/js/views/Home.js"
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block add_stylesheets %}
    {% stylesheets filter='cssrewrite'
        "@AppBundle/Resources/public/js/vendor/jquery.mcustomscrollbar/jquery.mCustomScrollbar.min.css"
        "@AppBundle/Resources/public/css/views/home.css"
        "@AppBundle/Resources/public/css/views/galerie.css"
        "@AppBundle/Resources/public/css/views/media.css"
        filter='cssrewrite'
    %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}