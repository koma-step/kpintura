{% extends 'base.html.twig' %}

{% block head %}
    {% stylesheets filter='cssrewrite'
        '@AppBundle/Resources/public/css/layout.css'
        '@AppBundle/Resources/public/css/amokicon.css'
        '@AppBundle/Resources/public/css/infinite_loader.css'
        '@AppBundle/Resources/public/js/jquery/jquery.mcustomscrollbar/jquery.mCustomScrollbar.min.css'
        '@AppBundle/Resources/public/js/jquery/jquery.fancybox/jquery.fancybox.css' %}
    <link rel="stylesheet" type="text/css" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% block add_stylesheets %}{% endblock %}

    <script src="{{ asset('bundles/fosjsrouting/js/router.js') }}"></script>
    <script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
{% endblock %}

{% block body %}
<div id="page">
    <div id="main-container">
        {% block content %}{% endblock %}
    </div>
    <div id="loader-container">
        <div class="loader-wrapper">
            <div class="loader">
                <div class="roller"></div>
                <div class="roller"></div>
            </div>

            <div id="loader2" class="loader">
                <div class="roller"></div>
                <div class="roller"></div>
            </div>

            <div id="loader3" class="loader">
                <div class="roller"></div>
                <div class="roller"></div>
            </div>
        </div>
    </div>
</div>

    {% javascripts
        '@jquery'
        '@AppBundle/Resources/public/js/layout.js'
        '@AppBundle/Resources/public/js/jquery/jquery.waitforimages/jquery.waitforimages.min.js'
        '@AppBundle/Resources/public/js/jquery/jquery.fancybox/jquery.fancybox.pack.js'
        '@AppBundle/Resources/public/js/jquery/vague/vague.js'
        '@AppBundle/Resources/public/js/jquery/isotope.pkgd.min.js'
        '@AppBundle/Resources/public/js/jquery/jquery.mcustomscrollbar/jquery.mCustomScrollbar.min.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% block add_scripts %}{% endblock %}
{% endblock %}